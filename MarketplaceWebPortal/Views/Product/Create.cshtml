@model Product

<form asp-action="Create" asp-controller="Product" method="post" enctype = "multipart/form-data">
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Manufacture</label>
            <input asp-for="Manufacture" class="form-control" />
            <span asp-validation-for="Manufacture" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Type</label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">ModelYear</label>
            <input asp-for="ModelYear" class="form-control" />
            <span asp-validation-for="ModelYear" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Weight</label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>



    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Enter File Name For Save</label>
            <input asp-for="FileName" class="form-control" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Select File</label>
            <input asp-for="File" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
    </div>


    <div class="row mt-2">
        <div class="col-12">
            <button type="submit" class="btn btn-success">Create Product</button>
        </div>
    </div>
</form>
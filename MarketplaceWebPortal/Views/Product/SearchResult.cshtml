@{
}
    @model IEnumerable<Product>

    
    <div class="container p-3">
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
			    </th>
                <th>
                    Manufacture
			    </th>
                <th>
                    Type
			    </th>
                <th>
                    Model Year
			    </th>
                <th>
                    Weight
			    </th>
                <th>
                    Price
			    </th>
                <th>

                </th>
		    </tr>
	    </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="15%">
                        @obj.Name
				    </td>
                    <td width="15%">
                        @obj.Manufacture
				    </td>
                    <td width="15%">
                        @obj.Type
				    </td>
                    <td width="15%">
                        @obj.ModelYear
				    </td>
                    <td width="15%">
                        @obj.Weight
				    </td>
                    <td width="15%">
                        @obj.Price
				    </td>
                    <td width="10%">
                        
                    </td>
			    </tr>
            }
        </tbody>

    </table>
    </div>